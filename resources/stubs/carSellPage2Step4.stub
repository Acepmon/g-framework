<script>
var bestZar = {
    container: document.getElementById('best-zar'),
    renderer: 'svg',
    loop: false,
    rendererSettings: {
        progressiveLoad: true
    },
    autoplay: false,
    path: '{{asset("car-web/animation/bestAD.json")}}'
},
anim1 = bodymovin.loadAnimation(bestZar);

var specialZar = {
    container: document.getElementById('special-zar'),
    renderer: 'svg',
    loop: false,
    rendererSettings: {
        progressiveLoad: true
    },
    autoplay: false,
    path: '{{asset("car-web/animation/specialAD.json")}}'
},
anim2 = bodymovin.loadAnimation(specialZar);

var sentAD = {
    container: document.getElementById('sent-ad'),
    renderer: 'svg',
    loop: false,
    rendererSettings: {
        progressiveLoad: true
    },
    autoplay: false,
    path: '{{asset("car-web/animation/mail-send.json")}}'
},
anim3 = bodymovin.loadAnimation(sentAD);

$("input").click(function(){

            if($("input[name='publishType']")){
                if($(this).val() === "best_premium"){
                    anim1.play();
                    anim2.stop();
                }else if($(this).val() === "premium"){
                    anim1.stop();
                    anim2.play();
                }
                console.log($(this).val())

            }
        });

    function submitStep4() {
        $("#demo-spinner").css({'display': 'block'});
        var paramObjs = {};
        $.each($('#step-4-publish').serializeArray(), function(_, kv) {
            paramObjs[kv.name] = kv.value;
        });
        console.log(paramObjs.publishAmount)
        if(paramObjs.publishType==="best_premium"){
            paramObjs.publishAmount=paramObjs.publishPriceAmountBest;
        }
        else if(paramObjs.publishType==="premium"){
            paramObjs.publishAmount=paramObjs.publishPriceAmountPremium;
        }
        else{
            paramObjs.publishAmount=0;
        }


        delete paramObjs.publishPriceAmountBest;
        delete paramObjs.publishPriceAmountPremium;
        //paramObjs.publishVerified=1;
        if(paramObjs.publishAmount!==0){
            var arr = paramObjs.publishAmount.split(",");
            //arr.forEach(        )
            arr.forEach(splitAmount);
            function splitAmount(item, index){
                if(index===0){
                    paramObjs.publishAmount=item;
                }
                if(index===1){
                    paramObjs.publishUnit=item;
                }
                if(index===2){
                    paramObjs.publishDuration=item;
                }
            }
            paramObjs.publishTotalPriceAmount=parseInt(paramObjs.publishAmount);
        }
        $.ajax({
            type: 'PUT',
            url: '/ajax/contents/' + carId + '/metas/sync',
            data: paramObjs
        }).done(function(data) {
            $.ajax({
                type: 'PUT',
                url: '/ajax/contents/' + carId,
                data: {"status":'{{ \App\Content::STATUS_PUBLISHED}}', "visibility":'{{ \App\Content::VISIBILITY_PUBLIC }}'}
            }).done(function(data) {
                $("#demo-spinner").css({'display': 'none'});
                nextPrev(1);
                console.log("DONE!");
                console.log(data);
                $('#carRegSuccess').modal('show');
                setTimeout(function(){
                    anim3.play();
                }, 700);

                setTimeout(function(){
                    window.location.href = "/posts/"+carId;
                }, 3000);

            }).fail(fail);
        }).fail(fail);
    }
</script>
