@section('script')
<script>
    var bestZar = {
    container: document.getElementById('best-zar'),
    renderer: 'svg',
    loop: false,
    rendererSettings: {
        progressiveLoad: true
    },
    autoplay: false,
    path: '{{asset("car-web/animation/bestAD.json")}}'
};
anim1 = bodymovin.loadAnimation(bestZar);

    var specialZar = {
    container: document.getElementById('special-zar'),
    renderer: 'svg',
    loop: false,
    rendererSettings: {
        progressiveLoad: true
    },
    autoplay: false,
    path: '{{asset("car-web/animation/specialAD.json")}}'
};
anim2 = bodymovin.loadAnimation(specialZar);
        
$(window).scroll(function(){
  var currentScroll = $(window).scrollTop();

  $('section').each(function(){
    var $this = $(this);
    if(($this.offset().top - $(window).height()/2) < currentScroll && currentScroll < ($this.offset().top - $(window).height()/2) + $this.outerHeight()){
      if(this.id === "section-best"){
        anim1.play();
      }else{
        anim1.stop();
      }
      if(this.id === "section-special"){
        anim2.play();
      }else{
        anim2.stop();
      }
      console.log(this.id);
    }
  })
})
</script>
